<h1>Welcome!</h1>
<%= link_to "Login", new_login_path %>
<hr>
<h2> Posts </h2>
<% @users.each do |user|%>
    <% user.posts.each do |post|%>
        <table style="border: 1px solid;">
            <tr>
                <td><b>User:</b></td>
                <td><%= user.email %></td>
            </tr>
            <tr>
                <td><b>Title</b></td>
                <td><%= post.title %></td>
            </tr>
            <tr>
                <td><b>Post</b></td>
                <td><%= post.body %></td>
            </tr>
            <% next unless @user %>
            
            <% if user.id == @user.id %>
                <tr>
                    <td>link_to "edit", post</td>   
                </tr>
            <%end%>
        <table>
    <%end%>
<%end%>